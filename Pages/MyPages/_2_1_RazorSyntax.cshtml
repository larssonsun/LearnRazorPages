@{
    foreach(var number in numbers)
    {
        //要在代码块内在同一行呈现html内容，请使用 @: 语法
        @(number * 10)@: * 10 = @(number * 100)&nbsp;
    }
}
<br/>

@{
    foreach(var number in numbers){
        //<text>标签表示没有@或者@()外的都是html代码，text标签本身不呈现
        <text>@(number * 10) * 10 = @(number * 10)&nbsp;</text>
    }
}
