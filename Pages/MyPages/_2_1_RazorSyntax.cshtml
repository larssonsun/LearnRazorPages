@{
    <!-- @{} 表式代码块，其中的内容不会呈现。代码块的默认语言为C# -->
    var u = "123";
    var numbers = Enumerable.Range(1, 10); //Get numbers from 1 - 10
}


<h3>shity @u </h3>
<br/>

@{
    foreach(var number in numbers){
        //@()是Razor的显式表达式，其中内容会呈现到html中
        <p>@(number * 10)</p>
    }
}
<br/>

