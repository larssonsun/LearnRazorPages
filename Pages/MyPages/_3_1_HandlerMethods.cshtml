@page
@{
    
    @functions
    {
        [BindProperty]
        public string name { get; set; }

        [BindProperty]
        public string age { get; set; }

        [BindProperty]
        public string Message { get; set; }

        public void OnGet()
        {
            Message = "请输入姓名及年龄。";
        }

        public void OnPost()
        {
            Message = $"hello {name}（{age}）";

            //if the prop do not decorated with the BindProperty attribute, 
            //you can do like this following:

            //var frm = Request.Form;
            //Message = $"hello {frm["name"]}（{frm["age"]}）";
        }
    }
}


<div>
    <h3>HandlerMethods</h3>
    <form method="POST">
        <p><input name="name" placeholder="姓名" /></p>
        <p><input name="age" placeholder="年龄" /></p>
        <button class="btn btn-default">提交</button>
    </form>
    <h2>@Message</h2>
</div>